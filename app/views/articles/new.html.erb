<%= turbo_frame_tag "modal" do %>
  <div class="modal">
    <h1>New article</h1>
    <%= render "form", article: @article %>
    <br>
    <div>
      <%= link_to "Cancel", "#", data: {
        controller: "modals",
        action: "modals#close"
      }, class: "cancel-button" %>
    </div>
  </div>
<% end %>
